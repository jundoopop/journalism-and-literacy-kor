# ============================================================================
# NEWS LITERACY HIGHLIGHTER CONFIGURATION
# ============================================================================

# ----------------------------------------------------------------------------
# Flask Server Configuration
# ----------------------------------------------------------------------------
FLASK_HOST=0.0.0.0
FLASK_PORT=5001
FLASK_DEBUG=True

# ----------------------------------------------------------------------------
# Admin API Authentication
# ----------------------------------------------------------------------------
# Generate a secure token: python -c "import secrets; print(secrets.token_urlsafe(32))"
ADMIN_TOKEN=your_secret_admin_token_here

# ----------------------------------------------------------------------------
# LLM Provider API Keys
# ----------------------------------------------------------------------------
GEMINI_API_KEY=your_gemini_api_key_here
MISTRAL_API_KEY=your_mistral_api_key_here
OPENAI_API_KEY=YOUR_KEY_HERE
CLAUDE_API_KEY=your_claude_api_key_here
LLAMA_API_KEY=your_llama_api_key_here

# ----------------------------------------------------------------------------
# LLM Settings
# ----------------------------------------------------------------------------
LLM_TIMEOUT=40
LLM_MAX_RETRIES=3
LLM_TEMPERATURE=0.2
# LLM_MAX_TOKENS=1000

# Legacy settings (for backward compatibility)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o-mini
REQUEST_TIMEOUT=40
MAX_RETRIES=2

# ----------------------------------------------------------------------------
# Consensus Analysis
# ----------------------------------------------------------------------------
CONSENSUS_ENABLED=True
CONSENSUS_PROVIDERS=gemini,mistral

# ----------------------------------------------------------------------------
# Redis Cache Configuration
# ----------------------------------------------------------------------------
CACHE_ENABLED=True
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=optional_password_if_needed
CACHE_TTL=3600

# ----------------------------------------------------------------------------
# Database Configuration
# ----------------------------------------------------------------------------
DATABASE_PATH=data/analytics.db
DATABASE_ECHO=False
DATABASE_POOL_SIZE=5

# ----------------------------------------------------------------------------
# Observability Configuration
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_DIR=data/logs
METRICS_ENABLED=True

# ----------------------------------------------------------------------------
# Feature Flags
# ----------------------------------------------------------------------------
ENABLE_CACHE=True
ENABLE_METRICS=True
ENABLE_ADMIN_API=True
